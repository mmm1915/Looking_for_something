<h2><%= t('devise.registrations.edit.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, t('devise.registrations.edit.nickname', default: 'ニックネーム') %><br />
    <%= f.text_field :nickname, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('devise.registrations.edit.current_password') %> 
    <i><%= t('devise.registrations.edit.current_password_hint') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update_button') %>
  </div>
<% end %>
</br>
<%= link_to 'メールアドレス変更', new_user_confirmation_path %><br>
<%= link_to 'パスワード変更', new_user_password_path %>
</br>
<%= link_to t('devise.registrations.edit.back'), :back %>
