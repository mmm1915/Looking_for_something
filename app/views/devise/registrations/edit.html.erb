<h2><%= t('devise.registrations.edit.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, t('devise.registrations.edit.nickname', default: 'ニックネーム') %><br />
    <%= f.text_field :nickname, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, t('devise.registrations.edit.email', default: 'メールアドレス（変更したい場合は新しいアドレスを入力）') %><br />
    <%= f.email_field :email, autocomplete: "email", value: resource.unconfirmed_email || resource.email %>
  </div>

  <div class="field">
    <%= f.label :current_password, t('devise.registrations.edit.current_password') %>
    <i><%= t('devise.registrations.edit.current_password_hint') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update_button', default: '更新する') %>
  </div>
<% end %>

</br>
<%= link_to t('devise.registrations.edit.back'), :back %>
