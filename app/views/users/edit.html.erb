<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :email, "新しいメールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", value: resource.unconfirmed_email || resource.email %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>
