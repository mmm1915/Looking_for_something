<% if user_signed_in? %>
  <%= link_to "マイページ", user_path(current_user) %> |
  <%= link_to "投稿する", new_search_post_path, class: "btn-success" %> |
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "ログアウトしてもよろしいですか？" } %>

<% else %>
  <p>ログインまたは新規登録をしてください</p>
  <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %> |
  <%= link_to "新規登録", new_user_registration_path, class: "btn btn-success" %>
<% end %>

<hr>

<% if @search_posts.present? %>
  <% @search_posts.each do |post| %>
    <div class="card mb-3" style="border: 2px solid #333; padding: 15px; border-radius: 8px;">
      <div class="card-body">
        <p><%= post.user.nickname %> は</p>
        <p><span style="color: blue;"><%= post.item_name %></span> を</p>
        <% if post.found_place.present? %>
          <p style="color: red; border: 1px solid red; padding: 5px; display: inline-block;">
            <%= post.found_place %> で見つけた
          </p>
        <% else %>
          <p>まだ見つけていません</p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>投稿がまだありません</p>
<% end %>